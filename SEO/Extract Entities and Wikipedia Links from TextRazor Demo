// Automatically extracts entities and corresponding Wikipedia links from results generated by the TextRazor demo tool. Copies the extracted entities and links to the clipboard and alerts the user upon completion or if no entities are found.
// Note: You can also update the script to include links from Wikidata.
javascript:(function() {    document.querySelectorAll('div.hc-preview').forEach(function(preview) {        var event = new MouseEvent('mouseover', { bubbles: true, cancelable: true, view: window });        preview.dispatchEvent(event);    });    setTimeout(function() {        var extractedEntities = new Set();        document.querySelectorAll('.hc-details').forEach(function(detail) {            var entityIdElement = detail.querySelector('strong em');            if (entityIdElement && entityIdElement.textContent.includes('Normalized Entity Id:')) {                var normalizedEntityId = entityIdElement.parentElement.nextSibling.textContent.trim();                var wikipediaLinkElement = detail.querySelector('a[href*="wikipedia.org"]');                var wikipediaLink = wikipediaLinkElement ? wikipediaLinkElement.href : %27No Wikipedia link found%27;                                if (normalizedEntityId) {                    extractedEntities.add(`Entity: ${normalizedEntityId}\nWikipedia Link: ${wikipediaLink}`);                }            }        });        if (extractedEntities.size > 0) {            var tempInput = document.createElement(%27textarea%27);            tempInput.value = Array.from(extractedEntities).join("\n\n");            document.body.appendChild(tempInput);            tempInput.select();            document.execCommand(%27copy%27);            document.body.removeChild(tempInput);            alert("Entities have been copied to the clipboard.");        } else {            alert(%27No Normalized Entity Ids found%27);        }    }, 500);})();
