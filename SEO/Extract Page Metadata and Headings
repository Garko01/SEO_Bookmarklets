// Copies the current page URL, meta title, meta description, and all headings (H1-H6) in order of appearance to the clipboard, with an alert on successful copy
javascript:(function() {    function copyToClipboard(text) {        navigator.clipboard.writeText(text).then(            function() { alert("Copied to clipboard!"); },            function(err) { alert("Failed to copy: " + err); }        );    }    var pageURL = "URL\n" + window.location.href + "\n\n";    var metaTitle = "Meta Title\n" + (document.querySelector("title") ? document.querySelector("title").innerText : "N/A") + "\n\n";    var metaDescriptionTag = document.querySelector("meta[name=%27description%27]");    var metaDescription = "Meta Description\n" + (metaDescriptionTag ? metaDescriptionTag.getAttribute("content") : "N/A") + "\n\n";    var headers = document.querySelectorAll("h1, h2, h3, h4, h5, h6");    var headerText = "Headings (in order of appearance)\n";    headers.forEach(function(header) {        headerText += header.tagName + ": " + header.textContent.trim() + "\n";    });    var combinedText = pageURL + metaTitle + metaDescription + headerText;    copyToClipboard(combinedText);})();
