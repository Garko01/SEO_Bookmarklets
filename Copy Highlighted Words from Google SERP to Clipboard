// Collects all bolded words on the current Google Search Engine Results Page (SERP), including those within "People Also Ask" sections, and copies them to the clipboard. Alerts the user upon successful copy or displays an error if the copy fails.
javascript:(function(){ let highlightedWords = []; document.querySelectorAll('b').forEach(function(b){ highlightedWords.push(b.textContent); }); document.querySelectorAll('em').forEach(function(em){ highlightedWords.push(em.textContent); }); let textToCopy = highlightedWords.join(', '); navigator.clipboard.writeText(textToCopy).then(function() { alert('Highlighted words copied to clipboard!'); }).catch(function(err) { alert('Failed to copy: ' + err); });})();
